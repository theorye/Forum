@model IEnumerable<Forum.Domain.ForumModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Forum list</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.ForumName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.ForumName)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.ForumName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.ForumName)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.ForumID" />
                        </td>
                    </tr>
                }
            </table>

        }
        else
        {
            <p>No forums exists...</p>
        }

    </div>
</div>


@model AdminForumViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Forum Details</h2>
<br />

<div class="border">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Forum.ForumName"></label>
        </div>
        <div class="col-5">
            <input asp-for="Forum.ForumName" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Forum.Description" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <textarea disabled asp-for="Forum.Description" class="form-control"></textarea>
        </div>
        <span asp-validation-for="Forum.Description" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Forum.CategoryName" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <select disabled asp-for="@Model.Forum.CategoryID" asp-items="@(new SelectList(Model.Categories, "CategoryID", "CategoryName"))" class="form-control"></select>
        </div>
        <span asp-validation-for="Forum.CategoryID" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="_DetailsAndBackToListButton" model="Model.Forum.ForumID" />
        </div>
    </div>

</div>
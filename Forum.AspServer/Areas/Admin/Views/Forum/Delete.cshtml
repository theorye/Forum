@model Forum.Domain.ForumModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2 class="text-info">Delete Forum</h2>
<br />

<form method="post" asp-action="Delete">
    <div class="border">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ForumName" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="ForumName" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.ForumID" />
            </div>
        </div>
    </div>
</form>
